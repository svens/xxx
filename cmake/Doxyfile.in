#
# Project
#

PROJECT_NAME = @CMAKE_PROJECT_NAME@
PROJECT_NUMBER = @CMAKE_PROJECT_VERSION@

#
# Input
#

INPUT = \
  @CMAKE_CURRENT_SOURCE_DIR@/@CMAKE_PROJECT_NAME@ \
  @CMAKE_CURRENT_SOURCE_DIR@/docs
RECURSIVE = YES

INPUT += @CMAKE_CURRENT_SOURCE_DIR@/README.md
USE_MDFILE_AS_MAINPAGE = README.md

FILE_PATTERNS = *.hpp *.md
EXCLUDE_PATTERNS = */__bits/* *.test.hpp

FULL_PATH_NAMES = YES
STRIP_FROM_PATH = @CMAKE_CURRENT_SOURCE_DIR@

EXCLUDE_SYMBOLS = @CMAKE_PROJECT_NAME@::__bits @CMAKE_PROJECT_NAME@::*::__bits __* std
JAVADOC_AUTOBRIEF = YES
INLINE_INHERITED_MEMB = YES
BUILTIN_STL_SUPPORT = YES
ENABLE_PREPROCESSING = YES
MACRO_EXPANSION = YES
EXPAND_ONLY_PREDEF = YES
PREDEFINED = \
  __@CMAKE_PROJECT_NAME@_begin="namespace @CMAKE_PROJECT_NAME@ {" \
  __@CMAKE_PROJECT_NAME@_end="}"

#
# Output
#

OUTPUT_DIRECTORY =
SHOW_USED_FILES = NO
QUIET = YES

# html
GENERATE_HTML = YES
HTML_OUTPUT = docs
GENERATE_TREEVIEW = YES
DISABLE_INDEX = YES
COLS_IN_ALPHA_INDEX = 1

# latex
GENERATE_LATEX = NO
